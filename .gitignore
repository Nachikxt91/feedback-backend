# Auto detect text files and normalize line endings to LF
* text=auto

# Python files
*.py text eol=lf
*.pyx text eol=lf
*.pxd text eol=lf
*.pyi text eol=lf

# Config files
*.toml text eol=lf
*.json text eol=lf
*.yaml text eol=lf
*.yml text eol=lf
*.ini text eol=lf
*.cfg text eol=lf
*.conf text eol=lf
*.txt text eol=lf
*.md text eol=lf
requirements.txt text eol=lf

# Docker
Dockerfile text eol=lf
.dockerignore text eol=lf

# Shell scripts
*.sh text eol=lf

# Windows scripts
*.bat text eol=crlf
*.cmd text eol=crlf

# Git
.gitignore text eol=lf
.gitattributes text eol=lf

# Binary files
*.pyc binary
*.pyo binary
*.pyd binary
*.so binary
*.db binary
*.sqlite binary
*.sqlite3 binary
