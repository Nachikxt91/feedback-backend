# ReviewPulse AI â€” Environment Variables
# Copy to .env and fill in your values

# MongoDB (Atlas free tier M0)
MONGODB_URL=mongodb+srv://<user>:<password>@<cluster>.mongodb.net/?retryWrites=true&w=majority
MONGODB_DB_NAME=reviewpulse_db

# Groq LLM (free tier)
GROQ_API_KEY=gsk_your_key_here
GROQ_MODEL=llama-3.3-70b-versatile

# JWT Secret (generate with: python -c "import secrets; print(secrets.token_hex(32))")
JWT_SECRET_KEY=change_me_to_a_random_64_char_hex_string
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_HOURS=168

# Rate limiting
RATE_LIMIT_PER_MINUTE=60

# File uploads
MAX_UPLOAD_SIZE_MB=10
